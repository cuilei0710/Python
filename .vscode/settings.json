{
    //Debug setting
    "debug.onTaskErrors": "showErrors",
    //Files exclude setting
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.vscode": true,
        "**/.gitignore": true,
    },
    // editor setting
    "editor.formatOnType": true,
    // fileheader setting
    "fileheader.tpl": "#Author: {author}\n#Date: {createTime}\n#Last Modified by:   {lastModifiedBy} \r\n#Last Modified time: {updateTime} \r\n",
}